<resources>

    <!-- Base application theme. -->
    <!-- new style-->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/unity_bg</item>
        <item name="colorPrimaryDark">@color/unity_bg</item>
        <item name="colorAccent">@color/unity_bg</item>

        <!--<item name="colorAccent">@color/white</item>-->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />


    <!-- baseActivity-->
    <style name="AppToolbarTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Actionbar color -->
        <!--<item name="colorPrimary">@color/common_red_main</item>-->
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/unity_bg</item>
        <!--Window color-->
        <item name="colorAccent">@color/unity_bg</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <item name="actionMenuTextColor">@color/white</item> <!--  敲定颜色-->

    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>


    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="common_compontv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="text_center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_center_white" parent="text_center">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_center_black" parent="text_center">
        <item name="android:textColor">@color/text_color_selected</item>
    </style>

    <style name="white_text_14" parent="text_center_white">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="white_text_16" parent="text_center_white">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="white_text_18" parent="text_center_white">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="white_text_22" parent="text_center_white">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="black_text_14" parent="text_center_black">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="black_text_16" parent="text_center_black">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="black_text_18" parent="text_center_black">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="black_text_22" parent="text_center_black">
        <item name="android:textSize">22sp</item>
    </style>


    <style name="layout_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="layout_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <declare-styleable name="CircleProgressBar">
        <!--文字大小-->
        <attr name="text_size" format="dimension"/>
        <!--文字颜色-->
        <attr name="text_color" format="color"/>
        <!--文本-->
        <attr name="text" format="string"/>
        <!--变宽宽度-->
        <attr name="stroke_width" format="integer"/>
        <!--未走的进度的颜色-->
        <attr name="normal_color" format="color"/>
        <!--已走的进度的颜色-->
        <attr name="progress_color" format="color"/>
        <!--已走的进度 0-360 -->
        <attr name="progress" format="integer"/>
        <!--类型 填充型，还是环形-->
        <attr name="progress_style" format="enum">
            <enum name="STROKE" value="0"/>
            <enum name="FILL" value="1"/>
        </attr>
    </declare-styleable>
</resources>
