<resources>

    <!-- Base application theme. -->
    <!-- new style-->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ui_new_title_bg</item>
        <item name="colorPrimaryDark">@color/ui_new_title_bg</item>
        <item name="colorAccent">@color/common_red_main</item>

        <!--<item name="colorAccent">@color/white</item>-->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />


    <!-- baseActivity-->
    <style name="AppToolbarTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Actionbar color -->
        <!--        <item name="colorPrimary">@color/common_red_main</item>-->
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/ui_new_title_bg</item>
        <!--Window color-->
        <item name="colorAccent">@color/common_red_main</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <item name="actionMenuTextColor">@color/white</item> <!--  敲定颜色-->
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>


    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="common_compontv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
